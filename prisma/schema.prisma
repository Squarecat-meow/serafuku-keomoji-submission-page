generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum status {
  PENDING
  REJECT
  ACCEPTED
}

model server {
  id         Int    @id @default(autoincrement())
  serverName String @unique
  appSecret  String
}

model submission {
  id          Int      @id @default(autoincrement())
  category    String
  name        String   @unique
  aliases     String[]
  imageUrl    String
  licenses    String?
  isSensitive Boolean  @default(false)
  isLocal     Boolean  @default(false)
  createdAt   DateTime @default(now())

  status status
}

model category {
  id   Int    @id @default(autoincrement())
  name String
}
