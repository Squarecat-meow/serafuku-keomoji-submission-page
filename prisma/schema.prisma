generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  REJECT
  ACCEPTED
}

model Server {
  id         Int    @id @default(autoincrement())
  serverName String @unique
  appSecret  String
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  avatarUrl String?
  bannerUrl String?
  roles     String[]

  submissions Submission[]
}

model Submission {
  id          Int      @id @default(autoincrement())
  category    String
  name        String   @unique
  aliases     String[]
  url         String
  licenses    String?
  isSensitive Boolean  @default(false)
  isLocal     Boolean  @default(false)
  createdAt   DateTime @default(now())

  status               Status @default(PENDING)
  submissioner         User   @relation(fields: [submissionerUsername], references: [username])
  submissionerUsername String
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}
